page {
  background: #0b0b0f;
  color: #f5f5f0;
  font-family: "HarmonyOS Sans SC", "Smiley Sans Oblique", sans-serif;
}

button {
  border-radius: 999px;
  font-size: 28rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  color: #fde68a;
}

.card {
  position: relative;
  background: linear-gradient(135deg, rgba(23, 23, 23, 0.95), rgba(11, 11, 15, 0.95));
  border: 1px solid rgba(245, 158, 11, 0.25);
  border-radius: 28rpx;
  box-shadow: 0 18rpx 36rpx rgba(0, 0, 0, 0.45);
  overflow: hidden;
}

.card::before {
  content: "";
  position: absolute;
  top: 0;
  left: -30%;
  width: 60%;
  height: 6rpx;
  background: linear-gradient(90deg, rgba(245, 158, 11, 0.7), rgba(245, 158, 11, 0));
}

.subtext {
  color: #d0d0d0;
  font-size: 26rpx;
}

/* Skeleton Loading Animation */
@keyframes skeleton-shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.skeleton {
  background: linear-gradient(
    90deg,
    rgba(30, 30, 35, 0.8) 25%,
    rgba(50, 50, 55, 0.8) 50%,
    rgba(30, 30, 35, 0.8) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-shimmer 1.5s ease-in-out infinite;
  border-radius: 12rpx;
}

.skeleton-card {
  position: relative;
  background: linear-gradient(135deg, rgba(23, 23, 23, 0.95), rgba(11, 11, 15, 0.95));
  border: 1px solid rgba(245, 158, 11, 0.15);
  border-radius: 28rpx;
  overflow: hidden;
}

.skeleton-cover {
  height: 280rpx;
  background: linear-gradient(
    90deg,
    rgba(30, 30, 35, 0.8) 25%,
    rgba(50, 50, 55, 0.8) 50%,
    rgba(30, 30, 35, 0.8) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-shimmer 1.5s ease-in-out infinite;
}

.skeleton-body {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.skeleton-title {
  height: 40rpx;
  width: 70%;
}

.skeleton-meta {
  height: 28rpx;
  width: 50%;
}

.skeleton-desc {
  height: 28rpx;
  width: 90%;
}

.skeleton-badge {
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  width: 100rpx;
  height: 40rpx;
  border-radius: 999px;
}

/* Unified Empty State Component */
.empty-state-box {
  padding: 60rpx 24rpx;
  text-align: center;
  border: 1px dashed rgba(245, 158, 11, 0.3);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-state-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(245, 158, 11, 0.1);
  border: 1px solid rgba(245, 158, 11, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.empty-state-icon text {
  font-size: 36rpx;
  color: rgba(245, 158, 11, 0.6);
}

.empty-state-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #fde68a;
}

.empty-state-desc {
  font-size: 24rpx;
  color: #d0d0d0;
}

/* Unified Avatar Placeholder */
.avatar-placeholder-icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(30, 30, 35, 0.8);
  color: rgba(245, 158, 11, 0.5);
  font-size: 40rpx;
}

.avatar-placeholder-icon.small {
  font-size: 28rpx;
}
