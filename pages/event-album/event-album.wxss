.page {
  min-height: 100vh;
  padding: 28rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  background-image:
    radial-gradient(circle at 8% 4%, rgba(245, 158, 11, 0.18), transparent 52%),
    radial-gradient(circle at 100% 80%, rgba(245, 158, 11, 0.1), transparent 42%);
}

.summary-card {
  padding: 22rpx;
}

.summary-head {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.upload-btn {
  flex-shrink: 0;
  min-width: 180rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.warning-text {
  display: block;
  color: #fdba74;
  margin-top: 4rpx;
}

.info-card {
  padding: 20rpx;
}

.waterfall {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.waterfall-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.wf-item {
  position: relative;
  overflow: hidden;
  border-radius: 20rpx;
  border: 1px solid rgba(245, 158, 11, 0.2);
  background: rgba(8, 8, 12, 0.8);
}

.wf-image {
  width: 100%;
  display: block;
}

/* Loading Skeleton */
.loading-skeleton {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.skeleton-grid {
  width: 100%;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.skeleton-thumb {
  width: 100%;
  height: 240rpx;
  border-radius: 20rpx;
}

.loading-hint {
  text-align: center;
}

/* Image metadata overlay removed */

.delete-btn {
  background: rgba(249, 115, 22, 0.14);
  border: 1px solid rgba(249, 115, 22, 0.55);
  color: #fdba74;
  border-radius: 999rpx;
}

.empty-tip-title {
  display: block;
  font-size: 28rpx;
  color: #fde68a;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.more-btn {
  align-self: center;
  min-width: 240rpx;
}

.preview-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 999;
  background: rgba(0, 0, 0, 0.86);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  box-sizing: border-box;
}

.preview-panel {
  width: 100%;
  height: 100%;
  max-width: 980rpx;
  border-radius: 32rpx;
  border: 1px solid rgba(245, 158, 11, 0.22);
  background: linear-gradient(145deg, rgba(23, 23, 26, 0.98), rgba(11, 11, 15, 0.98));
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.preview-swiper {
  flex: 1;
  width: 100%;
}

.preview-slide {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  box-sizing: border-box;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.preview-actions {
  padding: 16rpx;
  box-sizing: border-box;
  display: flex;
  gap: 12rpx;
  background: rgba(11, 11, 15, 0.92);
  border-top: 1px solid rgba(245, 158, 11, 0.16);
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.preview-btn {
  flex: 1;
  min-height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  padding: 0;
}
