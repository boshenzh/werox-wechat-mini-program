.page {
  min-height: 100vh;
  padding: 28rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  background-image:
    radial-gradient(circle at 8% 4%, rgba(245, 158, 11, 0.18), transparent 52%),
    radial-gradient(circle at 100% 80%, rgba(245, 158, 11, 0.1), transparent 42%);
}

.summary-card {
  padding: 22rpx;
}

.summary-head {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.upload-btn {
  flex-shrink: 0;
  min-width: 180rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.warning-text {
  display: block;
  color: #fdba74;
  margin-top: 4rpx;
}

.info-card {
  padding: 20rpx;
}

.photo-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 16rpx;
}

.photo-item {
  position: relative;
  overflow: hidden;
  border-radius: 20rpx;
  border: 1px solid rgba(245, 158, 11, 0.2);
  background: rgba(8, 8, 12, 0.8);
}

.photo-image {
  width: 100%;
  height: 280rpx;
  display: block;
}

.photo-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 92rpx;
  padding: 10rpx 12rpx;
  background: linear-gradient(180deg, rgba(11, 11, 15, 0) 0%, rgba(11, 11, 15, 0.78) 100%);
}

.photo-time {
  font-size: 21rpx;
  color: #f5f5f0;
}

.photo-actions {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx;
  background: rgba(11, 11, 15, 0.9);
}

.photo-action {
  flex: 1;
  min-height: 56rpx;
  line-height: 56rpx;
  padding: 0;
  font-size: 22rpx;
}

.delete-btn {
  flex: 0 0 96rpx;
  background: rgba(249, 115, 22, 0.14);
  border: 1px solid rgba(249, 115, 22, 0.55);
  color: #fdba74;
  border-radius: 999rpx;
}

.empty-tip-title {
  display: block;
  font-size: 28rpx;
  color: #fde68a;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.more-btn {
  align-self: center;
  min-width: 240rpx;
}

@media (max-width: 420px) {
  .photo-image {
    height: 240rpx;
  }
}
