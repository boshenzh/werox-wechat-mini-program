.page {
  padding: 26rpx 26rpx 168rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  background-image:
    radial-gradient(circle at 86% 0%, rgba(245, 158, 11, 0.2), transparent 50%),
    radial-gradient(circle at 0% 100%, rgba(245, 158, 11, 0.08), transparent 42%);
}

.hero-card,
.edit-card,
.info-card,
.attendance-card {
  padding: 22rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.hero-head {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.hero-top {
  display: flex;
  gap: 16rpx;
}

.avatar-wrap {
  width: 168rpx;
  height: 168rpx;
  border-radius: 28rpx;
  overflow: hidden;
  border: 2rpx solid rgba(245, 158, 11, 0.34);
  background: linear-gradient(145deg, rgba(28, 28, 33, 0.92), rgba(16, 16, 20, 0.92));
  box-shadow:
    0 12rpx 26rpx rgba(0, 0, 0, 0.45),
    0 0 44rpx rgba(245, 158, 11, 0.12) inset;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-btn-edit {
  position: relative;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.avatar-btn-edit::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-placeholder,
.avatar-text {
  color: #a3a3a3;
  font-size: 22rpx;
}

.avatar-edit-hint {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 10rpx 0;
  text-align: center;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
}

.avatar-edit-hint text {
  color: #fde68a;
  font-size: 20rpx;
}

.hero-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.hero-name {
  font-size: 36rpx;
  line-height: 1.28;
  font-weight: 700;
  color: #f5f5f0;
  text-shadow: 0 0 24rpx rgba(245, 158, 11, 0.24);
}

.hero-input {
  width: 100%;
  background: rgba(11, 11, 15, 0.84);
  border: 1px solid rgba(245, 158, 11, 0.32);
  border-radius: 18rpx;
  padding: 14rpx 16rpx;
  color: #f5f5f0;
  font-size: 28rpx;
  font-weight: 600;
}

.role-chip-row {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.role-chip,
.completion-chip {
  border-radius: 999rpx;
  padding: 6rpx 12rpx;
  font-size: 20rpx;
  border: 1px solid rgba(245, 158, 11, 0.34);
}

.role-chip {
  color: #fde68a;
  background: rgba(245, 158, 11, 0.14);
}

.completion-chip {
  color: #f5f5f0;
  border-color: rgba(96, 165, 250, 0.36);
  background: rgba(96, 165, 250, 0.12);
}

.hero-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.meta-item {
  border-radius: 999rpx;
  padding: 6rpx 12rpx;
  font-size: 21rpx;
  color: #a3a3a3;
  border: 1px solid rgba(245, 158, 11, 0.2);
  background: rgba(17, 17, 17, 0.72);
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  font-size: 21rpx;
  color: #fde68a;
  border: 1px solid rgba(245, 158, 11, 0.32);
  background: rgba(245, 158, 11, 0.13);
}

.hero-divider {
  height: 1px;
  background: linear-gradient(90deg,
    rgba(245, 158, 11, 0) 0%,
    rgba(245, 158, 11, 0.33) 32%,
    rgba(245, 158, 11, 0.33) 68%,
    rgba(245, 158, 11, 0) 100%);
}

.quick-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.quick-item {
  width: calc(50% - 5rpx);
  box-sizing: border-box;
  border-radius: 16rpx;
  border: 1px solid rgba(245, 158, 11, 0.16);
  background: rgba(12, 12, 16, 0.7);
  padding: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.quick-item.full {
  width: 100%;
}

.quick-label {
  font-size: 20rpx;
  color: #9f9fa5;
}

.quick-value {
  font-size: 24rpx;
  line-height: 1.5;
  color: #f5f5f0;
}

.edit-tip {
  border-radius: 14rpx;
  padding: 12rpx 14rpx;
  border: 1px solid rgba(96, 165, 250, 0.34);
  background: rgba(96, 165, 250, 0.1);
}

.edit-header {
  display: flex;
  flex-direction: column;
  gap: 3rpx;
}

.edit-section {
  border-radius: 18rpx;
  border: 1px solid rgba(245, 158, 11, 0.2);
  background: rgba(13, 13, 18, 0.64);
  padding: 14rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.edit-section-head {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.edit-index {
  width: 36rpx;
  height: 36rpx;
  border-radius: 9rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #f59e0b;
  font-size: 20rpx;
  font-weight: 700;
  background: rgba(245, 158, 11, 0.2);
}

.edit-title {
  font-size: 24rpx;
  color: #f5f5f0;
  font-weight: 600;
}

.section-grid {
  display: flex;
  gap: 10rpx;
}

.section-grid .form-row {
  flex: 1;
  min-width: 0;
}

.form-row {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.form-label {
  font-size: 23rpx;
  color: #fde68a;
}

.form-value {
  font-size: 25rpx;
  color: #f5f5f0;
  line-height: 1.5;
}

.form-input,
.form-textarea,
.picker-field,
.nickname-input {
  background: rgba(11, 11, 15, 0.84);
  border: 1px solid rgba(245, 158, 11, 0.28);
  border-radius: 16rpx;
  padding: 14rpx 16rpx;
  color: #f5f5f0;
  font-size: 25rpx;
}

.form-textarea {
  min-height: 128rpx;
  line-height: 1.6;
}

.picker-field {
  position: relative;
  padding-right: 42rpx;
}

.picker-field::after {
  content: "â–¾";
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: rgba(245, 158, 11, 0.6);
}

.picker-placeholder {
  color: #6b6b71;
}

.tag-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag-chip {
  border-radius: 999rpx;
  border: 1px solid rgba(245, 158, 11, 0.28);
  background: rgba(11, 11, 15, 0.74);
  color: #f5f5f0;
  font-size: 21rpx;
  line-height: 1.4;
  padding: 9rpx 14rpx;
}

.tag-chip-active {
  color: #0b0b0f;
  border-color: rgba(245, 158, 11, 0.92);
  background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
  box-shadow: 0 8rpx 18rpx rgba(245, 158, 11, 0.3);
}

.edit-actions {
  position: sticky;
  bottom: 12rpx;
  display: flex;
  gap: 10rpx;
  padding-top: 4rpx;
}

.edit-action-btn {
  flex: 1;
  align-self: auto;
}

.form-list {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.attendance-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.attendance-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.attendance-item {
  padding: 14rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(245, 158, 11, 0.16);
  background: rgba(12, 12, 16, 0.68);
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 10rpx;
  transition: all 120ms ease;
}

.attendance-item-hover {
  border-color: rgba(245, 158, 11, 0.4);
  background: rgba(22, 22, 28, 0.86);
  transform: translateY(-2rpx);
}

.attendance-info {
  min-width: 0;
  flex: 1;
}

.attendance-title {
  font-size: 25rpx;
  color: #f5f5f0;
  font-weight: 600;
}

.attendance-score {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.score-label {
  font-size: 21rpx;
  color: #fde68a;
}

.empty-state-inline {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 0;
}

.empty-icon {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  background: rgba(245, 158, 11, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-icon image {
  width: 26rpx;
  height: 26rpx;
  opacity: 0.74;
}

.float-actions {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: calc(124rpx + env(safe-area-inset-bottom));
  bottom: calc(124rpx + constant(safe-area-inset-bottom));
  display: flex;
  gap: 12rpx;
  z-index: 12;
}

.float-actions-single {
  left: 50%;
  right: auto;
  transform: translateX(-50%);
}

.float-action {
  flex: 1;
  min-height: 86rpx;
  border-radius: 999rpx;
  font-size: 27rpx;
  font-weight: 600;
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  box-shadow:
    0 16rpx 32rpx rgba(0, 0, 0, 0.44),
    0 0 48rpx rgba(245, 158, 11, 0.12);
}

.float-action::after {
  border: none;
}

.float-actions-single .float-action {
  min-width: 280rpx;
}

.float-action-edit {
  border-radius: 999rpx;
  border: 1px solid rgba(245, 158, 11, 0.42);
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.18), rgba(245, 158, 11, 0.08));
  color: #fde68a;
}

.float-action-admin {
  border: 1px solid rgba(245, 158, 11, 0.66);
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: #0b0b0f;
}

.auth-mask {
  position: fixed;
  inset: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: rgba(8, 8, 12, 0.86);
  backdrop-filter: blur(12rpx);
  -webkit-backdrop-filter: blur(12rpx);
}

.auth-modal {
  width: 100%;
  max-width: 620rpx;
  border-radius: 28rpx;
  border: 1px solid rgba(245, 158, 11, 0.34);
  background: linear-gradient(145deg, rgba(24, 24, 29, 0.98), rgba(10, 10, 15, 0.98));
  box-shadow:
    0 26rpx 52rpx rgba(0, 0, 0, 0.64),
    0 0 72rpx rgba(245, 158, 11, 0.08) inset;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.auth-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #fde68a;
  text-align: center;
}

.auth-form {
  margin: 10rpx 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.auth-avatar-row {
  display: flex;
  justify-content: center;
}

.avatar-btn {
  width: 154rpx;
  height: 154rpx;
  border-radius: 50%;
  border: 2rpx dashed rgba(245, 158, 11, 0.52);
  background: rgba(17, 17, 17, 0.78);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  padding: 0;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.auth-nickname-row {
  display: flex;
  flex-direction: column;
}

.nickname-input {
  text-align: center;
}

.auth-actions {
  display: flex;
  gap: 10rpx;
}

.auth-btn {
  flex: 1;
  align-self: auto;
}
