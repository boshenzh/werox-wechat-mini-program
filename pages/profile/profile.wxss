.page {
  padding: 32rpx 32rpx 140rpx;
  display: flex;
  flex-direction: column;
  gap: 26rpx;
  background-image: radial-gradient(circle at 90% 0%, rgba(245, 158, 11, 0.18), rgba(0, 0, 0, 0) 55%);
}

.hero-card {
  padding: 26rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.hero-top {
  display: flex;
  gap: 20rpx;
}

.avatar-wrap {
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
  overflow: hidden;
  background: rgba(23, 23, 23, 0.9);
  border: 1px solid rgba(245, 158, 11, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-text {
  color: #c0c0c0;
  font-size: 22rpx;
}

.hero-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.hero-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #f5f5f0;
}

.hero-name-wrap {
  width: 100%;
}

.hero-input {
  width: 100%;
  background: rgba(17, 17, 17, 0.75);
  border: 1px solid rgba(245, 158, 11, 0.28);
  border-radius: 18rpx;
  padding: 12rpx 16rpx;
  color: #f5f5f0;
  font-size: 28rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  align-items: center;
}

.tag-edit {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 999px;
  background: rgba(245, 158, 11, 0.2);
  color: #fde68a;
  font-size: 22rpx;
  border: 1px solid rgba(245, 158, 11, 0.35);
}

.hero-meta {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #c0c0c0;
  font-size: 22rpx;
}

.edit-meta {
  gap: 12rpx;
}

.meta-input {
  width: 120rpx;
  background: rgba(17, 17, 17, 0.75);
  border: 1px solid rgba(245, 158, 11, 0.28);
  border-radius: 16rpx;
  padding: 10rpx 12rpx;
  color: #f5f5f0;
  font-size: 22rpx;
}

.meta-divider {
  color: rgba(245, 158, 11, 0.4);
}

.hero-bottom {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.hero-line {
  height: 1px;
  background: linear-gradient(90deg, rgba(245, 158, 11, 0.35), rgba(245, 158, 11, 0));
}

.hero-row {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.hero-row-inline {
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  gap: 14rpx;
}

.hero-inline-text {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
  min-width: 0;
}

.hero-value {
  font-size: 24rpx;
  color: #f5f5f0;
}

.form-input,
.form-textarea {
  background: rgba(17, 17, 17, 0.75);
  border: 1px solid rgba(245, 158, 11, 0.28);
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  color: #f5f5f0;
  font-size: 26rpx;
}

.form-textarea {
  min-height: 140rpx;
}

.stats-card {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.stats-header {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.stats-grid {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0 4rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #c0c0c0;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #fde68a;
}

.stat-divider {
  width: 1px;
  height: 64rpx;
  background: rgba(245, 158, 11, 0.3);
}

.attendance-card {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.attendance-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.attendance-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.attendance-item {
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
  padding: 16rpx;
  border-radius: 18rpx;
  background: rgba(17, 17, 17, 0.7);
  border: 1px solid rgba(245, 158, 11, 0.2);
}

.attendance-title {
  font-size: 26rpx;
  color: #f5f5f0;
  font-weight: 600;
}

.attendance-score {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  align-items: flex-end;
}

.score-label {
  font-size: 22rpx;
  color: #fde68a;
}

.empty-state {
  padding: 20rpx 0;
}

.admin-card {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-card {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-row {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.form-label {
  font-size: 24rpx;
  color: #fde68a;
}

.form-value {
  font-size: 24rpx;
  color: #f5f5f0;
  line-height: 1.5;
}

.picker-field {
  background: rgba(17, 17, 17, 0.75);
  border: 1px solid rgba(245, 158, 11, 0.28);
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  color: #f5f5f0;
  font-size: 26rpx;
}

.picker-placeholder {
  color: #8c8c8c;
}

.primary-btn {
  background: #f59e0b;
  color: #0b0b0f;
  padding: 10rpx 26rpx;
  font-weight: 600;
  align-self: flex-start;
}

.ghost-btn {
  background: transparent;
  color: #fde68a;
  border: 1px solid rgba(245, 158, 11, 0.45);
  padding: 10rpx 24rpx;
  align-self: flex-start;
}

.copy-btn {
  background: rgba(245, 158, 11, 0.15);
  border: 1px solid rgba(245, 158, 11, 0.35);
  backdrop-filter: blur(12rpx);
  -webkit-backdrop-filter: blur(12rpx);
  padding: 8rpx 20rpx;
}

.float-edit {
  position: fixed;
  left: 50%;
  bottom: 120rpx;
  transform: translateX(-50%);
  background: rgba(245, 158, 11, 0.12);
  color: #fde68a;
  padding: 20rpx 40rpx;
  border-radius: 999px;
  font-weight: 600;
  border: 1px solid rgba(245, 158, 11, 0.45);
  backdrop-filter: blur(18rpx);
  -webkit-backdrop-filter: blur(18rpx);
  box-shadow: 0 18rpx 36rpx rgba(0, 0, 0, 0.45);
}
