.page {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  background-image: radial-gradient(circle at 100% 0%, rgba(245, 158, 11, 0.12), rgba(0, 0, 0, 0) 55%);
}

.profile-card {
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.avatar-section {
  display: flex;
  gap: 20rpx;
}

.avatar-wrap {
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
  overflow: hidden;
  background: rgba(23, 23, 23, 0.9);
  border: 1px solid rgba(245, 158, 11, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-text {
  color: #c0c0c0;
  font-size: 22rpx;
}

.avatar-actions {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.primary-btn {
  background: #f59e0b;
  color: #0b0b0f;
  padding: 10rpx 26rpx;
  font-weight: 600;
  align-self: flex-start;
}

.form {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.form-row {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.form-label {
  font-size: 24rpx;
  color: #fde68a;
}

.form-input,
.form-textarea {
  background: rgba(17, 17, 17, 0.75);
  border: 1px solid rgba(245, 158, 11, 0.28);
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  color: #f5f5f0;
  font-size: 26rpx;
}

.form-textarea {
  min-height: 160rpx;
}

.save-btn {
  margin-top: 10rpx;
}
