.page {
  padding: 26rpx 26rpx 60rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  background-image:
    radial-gradient(circle at 86% 0%, rgba(245, 158, 11, 0.2), transparent 50%),
    radial-gradient(circle at 0% 100%, rgba(245, 158, 11, 0.08), transparent 42%);
}

/* Search */
.search-bar {
  margin-bottom: 4rpx;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(17, 17, 22, 0.92);
  border: 1px solid rgba(245, 158, 11, 0.22);
  border-radius: 999rpx;
  padding: 14rpx 20rpx;
  backdrop-filter: blur(12rpx);
  -webkit-backdrop-filter: blur(12rpx);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.55;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  color: #f5f5f0;
  font-size: 26rpx;
  min-height: 40rpx;
}

.search-placeholder {
  color: #6b6b71;
}

.search-clear {
  color: #f59e0b;
  font-size: 24rpx;
  flex-shrink: 0;
  padding: 4rpx 8rpx;
}

/* User Card */
.user-card {
  padding: 18rpx 20rpx;
}

.user-row {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.user-avatar-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 22rpx;
  overflow: hidden;
  border: 1px solid rgba(245, 158, 11, 0.22);
  background: rgba(17, 17, 22, 0.82);
  flex-shrink: 0;
}

.user-avatar {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #f5f5f0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-meta {
  font-size: 21rpx;
  color: #6b6b71;
}

/* Role Badge */
.role-badge {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(245, 158, 11, 0.3);
  background: rgba(245, 158, 11, 0.08);
  flex-shrink: 0;
}

.role-badge-text {
  font-size: 22rpx;
  font-weight: 500;
}

.role-badge-arrow {
  font-size: 18rpx;
  opacity: 0.6;
}

/* Role colors */
.role-runner {
  border-color: rgba(163, 163, 163, 0.3);
  background: rgba(163, 163, 163, 0.08);
}
.role-runner .role-badge-text,
.role-runner .role-badge-arrow {
  color: #a3a3a3;
}

.role-coach {
  border-color: rgba(96, 165, 250, 0.4);
  background: rgba(96, 165, 250, 0.1);
}
.role-coach .role-badge-text,
.role-coach .role-badge-arrow {
  color: #60a5fa;
}

.role-organizer {
  border-color: rgba(52, 211, 153, 0.4);
  background: rgba(52, 211, 153, 0.1);
}
.role-organizer .role-badge-text,
.role-organizer .role-badge-arrow {
  color: #34d399;
}

.role-admin {
  border-color: rgba(245, 158, 11, 0.5);
  background: rgba(245, 158, 11, 0.14);
}
.role-admin .role-badge-text,
.role-admin .role-badge-arrow {
  color: #fde68a;
}

/* Skeleton */
.skeleton-avatar-sm {
  width: 88rpx;
  height: 88rpx;
  border-radius: 22rpx;
  flex-shrink: 0;
}

.skeleton-user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.skeleton-name {
  height: 30rpx;
  width: 50%;
}

.skeleton-role-tag {
  height: 24rpx;
  width: 30%;
}

/* Load More */
.load-more {
  padding: 24rpx;
  text-align: center;
}

.load-more-text {
  color: #f59e0b;
  font-size: 26rpx;
}

.loading-text {
  color: #a3a3a3;
}
