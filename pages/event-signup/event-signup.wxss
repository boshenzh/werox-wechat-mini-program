.page {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  background-image: radial-gradient(circle at 10% 10%, rgba(245, 158, 11, 0.12), rgba(0, 0, 0, 0) 55%);
}

.info-card {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.event-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f5f5f0;
}

.meta-row {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.meta-chip {
  font-size: 22rpx;
  color: #fde68a;
  border: 1px solid rgba(245, 158, 11, 0.35);
  border-radius: 999px;
  padding: 6rpx 14rpx;
  background: rgba(245, 158, 11, 0.12);
}

.profile-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.profile-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 18rpx;
}

.profile-avatar.placeholder {
  width: 96rpx;
  height: 96rpx;
  border-radius: 18rpx;
  background: rgba(30, 30, 35, 0.8);
  color: #c0c0c0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
}

.profile-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.profile-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #f5f5f0;
}

.form-card {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-row {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.form-label {
  font-size: 24rpx;
  color: #fde68a;
}

.form-input,
.form-textarea {
  background: rgba(17, 17, 17, 0.75);
  border: 1px solid rgba(245, 158, 11, 0.28);
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  color: #f5f5f0;
  font-size: 26rpx;
}

.picker-field {
  background: rgba(17, 17, 17, 0.75);
  border: 1px solid rgba(245, 158, 11, 0.28);
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  padding-right: 48rpx;
  color: #f5f5f0;
  font-size: 26rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.picker-field::after {
  content: "â–¾";
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: rgba(245, 158, 11, 0.6);
  font-size: 22rpx;
}

.form-textarea {
  min-height: 140rpx;
}

.placeholder {
  color: #8c8c8c;
}

.primary-btn {
  background: #f59e0b;
  color: #0b0b0f;
  padding: 10rpx 26rpx;
  font-weight: 600;
  align-self: flex-start;
}

.ghost-btn {
  background: transparent;
  color: #fde68a;
  border: 1px solid rgba(245, 158, 11, 0.45);
  padding: 10rpx 26rpx;
  align-self: flex-start;
}
