.page {
  padding: 28rpx 28rpx 126rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  background-image:
    radial-gradient(circle at 0% 0%, rgba(245, 158, 11, 0.18), transparent 50%),
    radial-gradient(circle at 100% 88%, rgba(245, 158, 11, 0.08), transparent 42%);
}

.info-card,
.form-card {
  padding: 22rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.event-info-card {
  gap: 10rpx;
}

.event-title {
  font-size: 34rpx;
  font-weight: 700;
  line-height: 1.35;
  color: #f5f5f0;
}

.meta-row {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 4rpx;
}

.meta-chip {
  font-size: 21rpx;
  color: #fde68a;
  border: 1px solid rgba(245, 158, 11, 0.34);
  border-radius: 999rpx;
  padding: 7rpx 16rpx;
  background: rgba(245, 158, 11, 0.1);
}

.profile-info-card {
  gap: 12rpx;
}

.profile-row {
  padding: 6rpx 0;
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.profile-avatar {
  width: 94rpx;
  height: 94rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.profile-avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(245, 158, 11, 0.2);
  background: rgba(17, 17, 17, 0.65);
}

.profile-avatar.placeholder image {
  width: 50rpx;
  height: 50rpx;
  opacity: 0.55;
}

.profile-info {
  min-width: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.profile-name {
  font-size: 27rpx;
  color: #f5f5f0;
  font-weight: 700;
}

.form-card {
  gap: 16rpx;
}

.form-head {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.confirm-tip {
  padding: 10rpx 14rpx;
  border-radius: 14rpx;
  border: 1px solid rgba(96, 165, 250, 0.36);
  background: rgba(96, 165, 250, 0.1);
}

.action-row {
  margin-top: 2rpx;
}

.submit-btn,
.signed-btn {
  width: 100%;
  align-self: auto;
  padding: 20rpx 0;
  font-size: 30rpx;
}

.signed-btn {
  opacity: 0.56;
}

.loading-state {
  padding: 56rpx 0;
  text-align: center;
}

