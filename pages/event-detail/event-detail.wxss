.page {
  padding: 28rpx 28rpx 236rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  background-image:
    radial-gradient(circle at 12% 8%, rgba(245, 158, 11, 0.18), transparent 52%),
    radial-gradient(circle at 100% 82%, rgba(245, 158, 11, 0.08), transparent 44%);
}

.cover-card {
  overflow: hidden;
}

.cover {
  height: 360rpx;
  position: relative;
  background-size: cover;
  background-position: center;
  background-color: rgba(30, 30, 35, 0.8);
}

.cover-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    180deg,
    rgba(8, 8, 12, 0.08) 0%,
    rgba(8, 8, 12, 0.42) 58%,
    rgba(8, 8, 12, 0.92) 100%
  );
}

.cover-badge,
.type-badge {
  position: absolute;
  top: 18rpx;
  z-index: 3;
  font-size: 21rpx;
  font-weight: 600;
  border-radius: 999rpx;
  padding: 8rpx 16rpx;
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
}

.cover-badge {
  left: 18rpx;
  color: #fde68a;
  background: rgba(11, 11, 15, 0.84);
  border: 1px solid rgba(245, 158, 11, 0.4);
}

.type-badge {
  right: 18rpx;
  color: #0b0b0f;
  font-weight: 700;
  border-radius: 10rpx;
  padding: 8rpx 14rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
}

.status-badge-draft {
  color: #c1c7d0;
  border-color: rgba(156, 163, 175, 0.52);
  background: rgba(156, 163, 175, 0.16);
}

.status-badge-upcoming {
  color: #7db8ff;
  border-color: rgba(96, 165, 250, 0.56);
  background: rgba(96, 165, 250, 0.2);
}

.status-badge-open {
  color: #3dd9a0;
  border-color: rgba(52, 211, 153, 0.58);
  background: rgba(52, 211, 153, 0.17);
}

.status-badge-closed {
  color: #ffd978;
  border-color: rgba(251, 191, 36, 0.58);
  background: rgba(251, 191, 36, 0.17);
}

.status-badge-ongoing {
  color: #f59e0b;
  border-color: rgba(245, 158, 11, 0.62);
  background: rgba(245, 158, 11, 0.18);
}

.status-badge-ended {
  color: #b8a5f2;
  border-color: rgba(167, 139, 250, 0.55);
  background: rgba(167, 139, 250, 0.18);
}

.cover-body {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.title-row {
  display: flex;
  align-items: flex-start;
}

.event-title {
  font-size: 40rpx;
  line-height: 1.3;
  font-weight: 700;
  color: #f5f5f0;
}

.event-meta-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.meta-chip {
  font-size: 21rpx;
  color: #fde68a;
  border-radius: 999rpx;
  border: 1px solid rgba(245, 158, 11, 0.32);
  background: rgba(245, 158, 11, 0.1);
  padding: 8rpx 16rpx;
}

.ordered-row {
  padding: 16rpx 0;
  border-top: 1px solid rgba(245, 158, 11, 0.12);
  display: flex;
  gap: 14rpx;
  align-items: flex-start;
}

.row-label {
  width: 120rpx;
  flex-shrink: 0;
  font-size: 23rpx;
  color: #9fa0a5;
}

.row-content {
  min-width: 0;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 14rpx;
}

.row-main {
  min-width: 0;
  font-size: 27rpx;
  line-height: 1.45;
  color: #f5f5f0;
  word-break: break-word;
}

.row-arrow {
  color: #fde68a;
  font-size: 30rpx;
  flex-shrink: 0;
}

.clickable-row:active {
  opacity: 0.85;
}

.desc-row .row-content {
  justify-content: flex-start;
}

.desc-content .event-desc {
  margin-top: 2rpx;
}

.event-desc {
  font-size: 24rpx;
  line-height: 1.65;
  color: #b8b8b8;
}

.participants-row-content {
  align-items: center;
}

.participants-preview {
  display: flex;
  align-items: center;
  margin-right: 8rpx;
}

.preview-avatar {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  border: 2rpx solid #0b0b0f;
  margin-left: -14rpx;
  background: rgba(17, 17, 17, 0.95);
}

.preview-avatar:first-child {
  margin-left: 0;
}

.preview-avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-avatar.placeholder image {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.6;
}

.reg-info {
  margin-top: 6rpx;
  padding: 16rpx 18rpx;
  border-radius: 18rpx;
  border: 1px solid rgba(245, 158, 11, 0.2);
  background: rgba(245, 158, 11, 0.09);
  display: flex;
  align-items: stretch;
  gap: 12rpx;
}

.reg-item {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.reg-label {
  font-size: 20rpx;
  color: #a3a3a3;
}

.reg-value {
  font-size: 26rpx;
  font-weight: 700;
  color: #fde68a;
}

.reg-divider {
  width: 1px;
  background: rgba(245, 158, 11, 0.24);
}

.intensity-section {
  margin-top: 2rpx;
}

.intensity-row {
  display: flex;
  gap: 18rpx;
}

.intensity-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.intensity-label {
  font-size: 20rpx;
  color: #a3a3a3;
}

.intensity-bar {
  height: 8rpx;
  border-radius: 999rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
}

.intensity-fill {
  height: 100%;
  border-radius: 999rpx;
}

.intensity-fill.strength {
  background: linear-gradient(90deg, #f59e0b 0%, #f97316 100%);
}

.intensity-fill.endurance {
  background: linear-gradient(90deg, #34d399 0%, #22d3ee 100%);
}

.intensity-value {
  font-size: 20rpx;
  color: #fde68a;
  font-weight: 600;
}

.info-card {
  padding: 22rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
}

.stations-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.station-item {
  padding: 14rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(245, 158, 11, 0.16);
  background: rgba(12, 12, 16, 0.66);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.station-order {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: rgba(245, 158, 11, 0.18);
  color: #f59e0b;
  font-size: 22rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.station-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 3rpx;
}

.station-name {
  font-size: 25rpx;
  color: #f5f5f0;
  font-weight: 600;
}

.station-target {
  font-size: 22rpx;
  color: #fde68a;
}

.station-weight {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  font-size: 20rpx;
  color: #a3a3a3;
  text-align: right;
}

.highlight-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.highlight-item {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
}

.highlight-dot {
  width: 8rpx;
  height: 8rpx;
  margin-top: 12rpx;
  border-radius: 50%;
  background: #f59e0b;
  flex-shrink: 0;
}

.highlight-text {
  font-size: 24rpx;
  color: #f5f5f0;
  line-height: 1.6;
}

.poster-img {
  width: 100%;
  border-radius: 20rpx;
  border: 1px solid rgba(245, 158, 11, 0.2);
}

.upload-btn {
  padding: 10rpx 18rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.album-entry-btn {
  align-self: flex-start;
  margin-top: 6rpx;
  padding: 12rpx 24rpx;
}

.btn-icon {
  width: 24rpx;
  height: 24rpx;
}

.empty-state-inline {
  padding: 12rpx 0;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.empty-icon {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: rgba(245, 158, 11, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-icon image {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.72;
}

.empty-state-box {
  padding: 76rpx 32rpx;
  border-radius: 28rpx;
  border: 1px dashed rgba(245, 158, 11, 0.26);
  background: linear-gradient(145deg, rgba(24, 24, 29, 0.62), rgba(10, 10, 14, 0.62));
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 18rpx;
}

.empty-state-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 1px solid rgba(245, 158, 11, 0.25);
  background: rgba(245, 158, 11, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-state-icon image {
  width: 44rpx;
  height: 44rpx;
  opacity: 0.8;
}

.empty-state-title {
  font-size: 30rpx;
  color: #fde68a;
  font-weight: 600;
}

.empty-state-desc {
  font-size: 23rpx;
  color: #a3a3a3;
}

.participant-sheet-mask {
  position: fixed;
  inset: 0;
  z-index: 80;
  background: rgba(6, 6, 9, 0.62);
}

.participant-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 90;
  height: 62vh;
  max-height: 840rpx;
  border-top-left-radius: 28rpx;
  border-top-right-radius: 28rpx;
  border: 1px solid rgba(245, 158, 11, 0.22);
  background: linear-gradient(150deg, rgba(24, 24, 28, 0.98), rgba(9, 9, 13, 0.98));
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.sheet-header {
  padding: 20rpx 22rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid rgba(245, 158, 11, 0.14);
}

.sheet-title {
  font-size: 30rpx;
  color: #fde68a;
  font-weight: 700;
}

.sheet-close {
  font-size: 23rpx;
  color: #f5f5f0;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(245, 158, 11, 0.28);
  background: rgba(245, 158, 11, 0.09);
}

.sheet-list {
  flex: 1;
  padding: 10rpx 14rpx 20rpx;
  box-sizing: border-box;
}

.sheet-empty {
  padding: 28rpx 0;
  text-align: center;
}

.sheet-participant-item {
  padding: 12rpx 10rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(245, 158, 11, 0.14);
  background: rgba(13, 13, 18, 0.6);
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.participant-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.participant-avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.08);
}

.participant-avatar.placeholder image {
  width: 34rpx;
  height: 34rpx;
  opacity: 0.64;
}

.participant-info {
  min-width: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.participant-name {
  font-size: 26rpx;
  color: #f5f5f0;
  font-weight: 600;
}

.sheet-arrow {
  font-size: 28rpx;
  color: #fde68a;
  flex-shrink: 0;
}

.bottom-action-bar {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  bottom: calc(16rpx + env(safe-area-inset-bottom));
  bottom: calc(16rpx + constant(safe-area-inset-bottom));
  z-index: 70;
  padding: 14rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(245, 158, 11, 0.28);
  background: rgba(11, 11, 15, 0.9);
  backdrop-filter: blur(18rpx);
  -webkit-backdrop-filter: blur(18rpx);
  display: flex;
  gap: 10rpx;
}

.action-btn {
  flex: 1;
  align-self: auto;
}

.share-btn {
  max-width: 180rpx;
}

.signup-btn[disabled] {
  opacity: 0.56;
  box-shadow: none;
}
