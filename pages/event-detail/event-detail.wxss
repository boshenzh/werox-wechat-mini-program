.page {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  background-image: radial-gradient(circle at 10% 10%, rgba(245, 158, 11, 0.14), rgba(0, 0, 0, 0) 55%);
}

.cover-card {
  overflow: hidden;
}

.cover {
  height: 320rpx;
  background-size: cover;
  background-position: center;
  position: relative;
}

.cover::after {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(11, 11, 15, 0.05), rgba(11, 11, 15, 0.78));
}

.cover-badge {
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  background: rgba(11, 11, 15, 0.85);
  color: #fde68a;
  font-size: 22rpx;
  padding: 8rpx 18rpx;
  border-radius: 999px;
  border: 1px solid rgba(245, 158, 11, 0.35);
  z-index: 1;
}

.cover-body {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.event-title {
  font-size: 34rpx;
  font-weight: 600;
}

.event-meta {
  font-size: 24rpx;
  color: #fde68a;
}

.event-desc {
  font-size: 24rpx;
  color: #d7d7d7;
}

.event-meta-row {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.meta-chip {
  font-size: 22rpx;
  color: #fde68a;
  border: 1px solid rgba(245, 158, 11, 0.35);
  border-radius: 999px;
  padding: 6rpx 14rpx;
  background: rgba(245, 158, 11, 0.12);
}

.primary-btn {
  background: #f59e0b;
  color: #0b0b0f;
  padding: 10rpx 26rpx;
  font-weight: 600;
  align-self: flex-start;
}

.info-card {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.album-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.highlight-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-top: 6rpx;
}

.highlight-item {
  display: flex;
  gap: 8rpx;
  align-items: flex-start;
}

.highlight-dot {
  color: #f59e0b;
  font-weight: 700;
}

.highlight-text {
  font-size: 24rpx;
  color: #f5f5f0;
}

.empty-photo {
  padding: 24rpx 0;
}

.poster-img {
  width: 100%;
  border-radius: 20rpx;
  border: 1px solid rgba(245, 158, 11, 0.22);
}

.participants-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.participant-item {
  display: flex;
  gap: 16rpx;
  align-items: center;
  padding: 12rpx;
  border-radius: 18rpx;
  background: rgba(17, 17, 17, 0.7);
  border: 1px solid rgba(245, 158, 11, 0.2);
}

.participant-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 18rpx;
}

.participant-avatar.placeholder {
  width: 90rpx;
  height: 90rpx;
  border-radius: 18rpx;
  background: rgba(30, 30, 35, 0.8);
  color: rgba(245, 158, 11, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
}

.avatar-icon {
  font-size: 32rpx;
  opacity: 0.6;
}

.participant-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.participant-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #f5f5f0;
}

/* Empty state inline styles */
.empty-state-inline {
  padding: 24rpx 0;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.empty-icon {
  font-size: 28rpx;
  opacity: 0.7;
}

/* View more button */
.view-more-btn {
  margin-top: 12rpx;
  background: transparent;
  color: #fde68a;
  border: 1px solid rgba(245, 158, 11, 0.35);
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  align-self: center;
}
