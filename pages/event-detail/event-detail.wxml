<view class="page">
  <view class="card cover-card">
    <view class="cover" style="background-image: url({{event.coverUrl}});">
      <view class="cover-badge">{{event.statusText}}</view>
    </view>
    <view class="cover-body">
      <text class="event-title">{{event.title}}</text>
      <text class="event-meta">{{event.dateText}} · {{event.location}}</text>
      <text class="event-desc">{{event.description}}</text>
      <button class="primary-btn" bindtap="handleRegister">报名 / 购票</button>
    </view>
  </view>

  <view class="card info-card">
    <text class="section-title">赛事亮点</text>
    <view class="highlight-list">
      <view class="highlight-item" wx:for="{{event.highlights}}" wx:key="index">
        <text class="highlight-dot">•</text>
        <text class="highlight-text">{{item}}</text>
      </view>
    </view>
  </view>

  <view class="card info-card">
    <view class="album-header">
      <text class="section-title">赛事相册</text>
      <button class="primary-btn" bindtap="handleUpload">上传照片</button>
    </view>
    <text class="subtext">照片会同步到该赛事相册。</text>
    <view class="empty-photo">
      <text class="subtext">暂未上传照片</text>
    </view>
  </view>
</view>
