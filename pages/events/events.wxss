.page {
  padding: 28rpx 28rpx 116rpx;
  min-height: 100vh;
  background-image:
    radial-gradient(circle at 0% 0%, rgba(245, 158, 11, 0.2), transparent 52%),
    radial-gradient(circle at 100% 84%, rgba(245, 158, 11, 0.09), transparent 42%);
}

.hero {
  margin-bottom: 26rpx;
}

.hero-content {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  gap: 18rpx;
}

.brand {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.brand-logo-large {
  width: 388rpx;
  height: 108rpx;
  filter: drop-shadow(0 10rpx 22rpx rgba(245, 158, 11, 0.35));
}

.hero-copy {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  margin-left: 4rpx;
}

.hero-kicker {
  font-size: 24rpx;
  color: #fde68a;
  letter-spacing: 1rpx;
  font-weight: 600;
}

.hero-subline {
  font-size: 21rpx;
  color: #a3a3a3;
}

.hero-stats {
  padding: 12rpx 16rpx;
  border-radius: 18rpx;
  border: 1px solid rgba(245, 158, 11, 0.3);
  background: rgba(17, 17, 17, 0.72);
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 2rpx;
}

.stat-number {
  font-size: 40rpx;
  line-height: 1;
  font-weight: 800;
  color: #fde68a;
  text-shadow: 0 0 20rpx rgba(245, 158, 11, 0.3);
}

.stat-label {
  font-size: 20rpx;
  color: #a3a3a3;
}

.cards {
  display: flex;
  flex-direction: column;
  gap: 22rpx;
}

.skeleton-card {
  border-radius: 28rpx;
  overflow: hidden;
  border: 1px solid rgba(245, 158, 11, 0.14);
  background: linear-gradient(145deg, rgba(24, 24, 30, 0.92), rgba(12, 12, 16, 0.92));
}

.skeleton-cover {
  height: 276rpx;
  background: linear-gradient(90deg, rgba(30, 30, 35, 0.84) 25%, rgba(50, 50, 56, 0.94) 50%, rgba(30, 30, 35, 0.84) 75%);
  background-size: 200% 100%;
  animation: skeleton-shimmer 1.45s ease-in-out infinite;
  position: relative;
}

.skeleton-body {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.skeleton {
  border-radius: 12rpx;
  background: linear-gradient(90deg, rgba(30, 30, 35, 0.8) 25%, rgba(50, 50, 55, 0.9) 50%, rgba(30, 30, 35, 0.8) 75%);
  background-size: 200% 100%;
  animation: skeleton-shimmer 1.45s ease-in-out infinite;
}

.skeleton-badge {
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  width: 120rpx;
  height: 40rpx;
  border-radius: 999rpx;
}

.skeleton-title {
  height: 44rpx;
  width: 68%;
}

.skeleton-meta {
  height: 28rpx;
  width: 52%;
}

.skeleton-desc {
  height: 26rpx;
  width: 88%;
}

.event-card {
  overflow: hidden;
}

.card-active {
  transform: translateY(2rpx) scale(0.992);
}

.event-cover {
  height: 306rpx;
  position: relative;
  background-color: rgba(30, 30, 35, 0.8);
}

.cover-img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.cover-overlay {
  position: absolute;
  inset: 0;
  z-index: 2;
  background: linear-gradient(
    180deg,
    rgba(8, 8, 12, 0.12) 0%,
    rgba(8, 8, 12, 0.34) 52%,
    rgba(8, 8, 12, 0.88) 100%
  );
}

.event-badge {
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  z-index: 3;
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(245, 158, 11, 0.36);
  background: rgba(11, 11, 15, 0.88);
  color: #fde68a;
  font-size: 21rpx;
  font-weight: 600;
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
}

.format-badge {
  position: absolute;
  top: 18rpx;
  right: 18rpx;
  z-index: 3;
  padding: 8rpx 14rpx;
  border-radius: 10rpx;
  font-size: 19rpx;
  font-weight: 700;
  color: #0b0b0f;
  background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
}

.signup-chip {
  position: absolute;
  left: 18rpx;
  bottom: 18rpx;
  z-index: 3;
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 8rpx 14rpx 8rpx 10rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(245, 245, 240, 0.24);
  background: rgba(11, 11, 15, 0.66);
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
}

.signup-avatars {
  display: flex;
  align-items: center;
}

.signup-avatar {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.94);
  margin-left: -10rpx;
  background: rgba(255, 255, 255, 0.2);
}

.signup-avatar:first-child {
  margin-left: 0;
}

.signup-text {
  font-size: 20rpx;
  font-weight: 600;
  color: #f5f5f0;
}

.event-body {
  padding: 24rpx 24rpx 26rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.event-title {
  font-size: 35rpx;
  line-height: 1.3;
  font-weight: 700;
  color: #f5f5f0;
}

.event-meta-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  min-width: 0;
}

.meta-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.7;
}

.meta-divider {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: rgba(245, 158, 11, 0.45);
}

.event-meta {
  font-size: 23rpx;
  color: #d6d6d1;
}

.distance-text {
  color: #fde68a;
  font-weight: 600;
}

/* Intensity indicators removed (强度/耐力 bar) */

.animate-in {
  opacity: 0;
  animation: card-rise 0.45s ease-out forwards;
}

@keyframes card-rise {
  from {
    opacity: 0;
    transform: translateY(18rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
