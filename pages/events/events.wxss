.page {
  padding: 32rpx 32rpx 80rpx;
  background-image: radial-gradient(circle at 0% 0%, rgba(245, 158, 11, 0.16), rgba(0, 0, 0, 0) 55%);
}

.hero {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  padding-bottom: 18rpx;
  border-bottom: 1px solid rgba(245, 158, 11, 0.18);
}

.hero-text {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.hero-title {
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.hero-sub {
  font-size: 24rpx;
  color: #c0c0c0;
}

.ghost-btn {
  background: transparent;
  color: #fde68a;
  border: 1px solid rgba(245, 158, 11, 0.45);
  padding: 12rpx 28rpx;
}

.status {
  padding: 40rpx 0;
  text-align: center;
}

.cards {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.event-card {
  overflow: hidden;
  transition: transform 0.15s ease, opacity 0.15s ease;
}

.card-active {
  transform: scale(0.98);
  opacity: 0.9;
}

.event-cover {
  height: 280rpx;
  background-size: cover;
  background-position: center;
  position: relative;
}

.event-cover::after {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(11, 11, 15, 0.05), rgba(11, 11, 15, 0.78));
}

.event-badge {
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  background: rgba(11, 11, 15, 0.85);
  color: #fde68a;
  font-size: 22rpx;
  padding: 8rpx 18rpx;
  border-radius: 999px;
  border: 1px solid rgba(245, 158, 11, 0.35);
  z-index: 1;
}

.event-body {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.event-title {
  font-size: 34rpx;
  font-weight: 600;
}

.event-meta {
  font-size: 24rpx;
  color: #fde68a;
}

.event-desc {
  font-size: 24rpx;
  color: #d7d7d7;
}

